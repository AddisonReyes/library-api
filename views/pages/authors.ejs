<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body class="app-body">
    <%- include('../partials/header'); %>
    
    <div class="main-content">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <h2 class="mb-1">Authors Management</h2>
          <p class="muted mb-0">Manage library authors</p>
        </div>
        <button class="btn btn-primary" data-toggle="modal" data-target="#addAuthorModal">
          + Add New Author
        </button>
      </div>

      <!-- Authors Table -->
      <div class="card">
        <div class="card-header">Authors List</div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Last Name</th>
                  <th>Nationality</th>
                  <th>Birthdate</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody id="authorsTableBody">
                <tr>
                  <td colspan="5" class="text-center">
                    <div class="empty-state">
                      <div class="empty-state-icon">✍️</div>
                      <p>Loading authors...</p>
                    </div>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <!-- Add Author Modal -->
    <div class="modal fade" id="addAuthorModal" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Add New Author</h5>
            <button type="button" class="close" data-dismiss="modal">
              <span>&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form id="addAuthorForm">
              <div class="form-group">
                <label class="small muted">First Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="authorName"
                  required
                />
              </div>
              <div class="form-group">
                <label class="small muted">Last Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="authorLastName"
                />
              </div>
              <div class="form-group">
                <label class="small muted">Nationality</label>
                <input
                  type="text"
                  class="form-control"
                  id="authorNationality"
                />
              </div>
              <div class="form-group">
                <label class="small muted">Birthdate</label>
                <input
                  type="date"
                  class="form-control"
                  id="authorBirthdate"
                />
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">
              Cancel
            </button>
            <button type="button" class="btn btn-primary" onclick="addAuthor()">
              Add Author
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Edit Author Modal -->
    <div class="modal fade" id="editAuthorModal" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Edit Author</h5>
            <button type="button" class="close" data-dismiss="modal">
              <span>&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form id="editAuthorForm">
              <input type="hidden" id="editAuthorId" />
              <div class="form-group">
                <label class="small muted">First Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="editAuthorName"
                  required
                />
              </div>
              <div class="form-group">
                <label class="small muted">Last Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="editAuthorLastName"
                />
              </div>
              <div class="form-group">
                <label class="small muted">Nationality</label>
                <input
                  type="text"
                  class="form-control"
                  id="editAuthorNationality"
                />
              </div>
              <div class="form-group">
                <label class="small muted">Birthdate</label>
                <input
                  type="date"
                  class="form-control"
                  id="editAuthorBirthdate"
                />
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">
              Cancel
            </button>
            <button type="button" class="btn btn-primary" onclick="updateAuthor()">
              Update Author
            </button>
          </div>
        </div>
      </div>
    </div>

    <script>
      let allAuthors = [];

      // Load all authors
      async function loadAuthors() {
        try {
          const response = await fetch('/api/authors');
          allAuthors = await response.json();
          displayAuthors(allAuthors);
        } catch (error) {
          console.error('Error loading authors:', error);
          document.getElementById('authorsTableBody').innerHTML = `
            <tr>
              <td colspan="5" class="text-center">
                <div class="empty-state">
                  <div class="empty-state-icon">⚠️</div>
                  <p>Error loading authors</p>
                </div>
              </td>
            </tr>
          `;
        }
      }

      // Display authors in table
      function displayAuthors(authors) {
        const tbody = document.getElementById('authorsTableBody');
        
        if (authors.length === 0) {
          tbody.innerHTML = `
            <tr>
              <td colspan="5" class="text-center">
                <div class="empty-state">
                  <div class="empty-state-icon">✍️</div>
                  <p>No authors found</p>
                </div>
              </td>
            </tr>
          `;
          return;
        }

        tbody.innerHTML = authors.map(author => {
          const birthdate = author.birthdate 
            ? new Date(author.birthdate).toLocaleDateString() 
            : 'N/A';
          
          return `
            <tr>
              <td>${author.name}</td>
              <td>${author.lastName || 'N/A'}</td>
              <td>${author.nationality || 'N/A'}</td>
              <td>${birthdate}</td>
              <td>
                <button class="btn btn-sm btn-warning" onclick="openEditModal('${author._id}')">
                  Edit
                </button>
                <button class="btn btn-sm btn-danger" onclick="deleteAuthor('${author._id}')">
                  Delete
                </button>
              </td>
            </tr>
          `;
        }).join('');
      }

      // Add new author
      async function addAuthor() {
        const authorData = {
          name: document.getElementById('authorName').value,
          lastName: document.getElementById('authorLastName').value,
          nationality: document.getElementById('authorNationality').value,
          birthdate: document.getElementById('authorBirthdate').value
        };

        try {
          const response = await fetch('/api/authors', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(authorData)
          });

          if (response.ok) {
            $('#addAuthorModal').modal('hide');
            document.getElementById('addAuthorForm').reset();
            loadAuthors();
          } else {
            const error = await response.json();
            alert(error.message || 'Error adding author');
          }
        } catch (error) {
          console.error('Error adding author:', error);
          alert('Error adding author');
        }
      }

      // Open edit modal
      function openEditModal(authorId) {
        const author = allAuthors.find(a => a._id === authorId);
        if (!author) return;

        document.getElementById('editAuthorId').value = author._id;
        document.getElementById('editAuthorName').value = author.name;
        document.getElementById('editAuthorLastName').value = author.lastName || '';
        document.getElementById('editAuthorNationality').value = author.nationality || '';
        
        if (author.birthdate) {
          const date = new Date(author.birthdate);
          document.getElementById('editAuthorBirthdate').value = date.toISOString().split('T')[0];
        }

        $('#editAuthorModal').modal('show');
      }

      // Update author
      async function updateAuthor() {
        const authorId = document.getElementById('editAuthorId').value;
        const authorData = {
          name: document.getElementById('editAuthorName').value,
          lastName: document.getElementById('editAuthorLastName').value,
          nationality: document.getElementById('editAuthorNationality').value,
          birthdate: document.getElementById('editAuthorBirthdate').value
        };

        try {
          const response = await fetch(`/api/authors/${authorId}`, {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(authorData)
          });

          if (response.ok) {
            $('#editAuthorModal').modal('hide');
            loadAuthors();
          } else {
            alert('Error updating author');
          }
        } catch (error) {
          console.error('Error updating author:', error);
          alert('Error updating author');
        }
      }

      // Delete author
      async function deleteAuthor(authorId) {
        if (!confirm('Are you sure you want to delete this author?')) return;

        try {
          const response = await fetch(`/api/authors/${authorId}`, {
            method: 'DELETE'
          });

          if (response.ok) {
            loadAuthors();
          } else {
            alert('Error deleting author');
          }
        } catch (error) {
          console.error('Error deleting author:', error);
          alert('Error deleting author');
        }
      }

      // Initialize
      document.addEventListener('DOMContentLoaded', loadAuthors);
    </script>
  </body>
</html>
